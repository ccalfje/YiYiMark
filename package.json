{
    "name": "catmark",
    "displayName": "CatMark",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.3"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:catmark.helloWorld",
        "onView:cat-markview",
        "onCommand:catmark.markCurrentLine",
        "workspaceContains:*.*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "catmark",
            "properties": {
                "catmark.DataSaveFilePath": {
                    "type":"string",
                    "description": "The path to save mark data. If it's empty, data will be saved in file 'workspaceFolders/.vscode/markData.json'.",
                    "default": ""
                },
                "catmark.AutoSave": {
                    "type":"boolean",
                    "description": "Controls auto save of mark data that have unsaved changes.",
                    "default": true
                },
                "catmark.AutoReadChange": {
                    "type":"boolean",
                    "description": "Controls auto read of data that modified by other processes.",
                    "default": true
                }
            }
        },
        "commands": [
            {
                "command": "catmark.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "catmark.markCurrentLine",
                "title": "Mark Current Line"
            },
            {
                "command": "catmark.deleteNode",
                "title": "Delete Node",
                "icon": {
                    "dark": "media/delete_all_dark.svg",
                    "light": "media/delete_all_light.svg"
                }
            },
            {
                "command": "catmark.createGroup",
                "title": "Create Group",
                "icon": "media/dep.svg"
            },
            {
                "command": "catmark.collapseAll",
                "title": "Collapse All Node",
                "icon": "media/dep.svg"
            },
            {
                "command": "catmark.reloadData",
                "title": "Reload saved mark data."
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cat-mark",
                    "title": "Cat Mark",
                    "icon": "media/catpaw.svg"
                }
            ]
        },
        "views": {
            "cat-mark": [
                {
                    "id": "cat-markview",
                    "name": "mark",
                    "icon": "media/dep.svg",
                    "contextualTitle": "mark"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "catmark.markCurrentLine",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "catmark.createGroup",
                    "when": "view == cat-markview",
                    "group": "navigation"
                },
                {
                    "command": "catmark.collapseAll",
                    "when": "view == cat-markview",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "catmark.deleteNode",
                    "when": "view == cat-markview",
                    "group": "inline"
                },
                {
                    "command": "catmark.deleteNode",
                    "when": "view == cat-markview"
                },
                {
                    "command": "catmark.createGroup",
                    "when": "view == cat-markview"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.3",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.16.0",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}