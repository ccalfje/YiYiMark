{
    "name": "yiyimark",
    "displayName": "YiYiMark",
    "description": "Bookmark for Vs Code.",
    "version": "0.0.2",
    "author": {"name": "guoyu"},
    "engines": {
        "vscode": "^1.60.3"
    },
    "categories": [
        "Other"
    ],
    "icon": "media/catpaw_dark.png",
    "activationEvents": [
        "onCommand:yiyimark.helloWorld",
        "onView:yiyi-markview",
        "onCommand:yiyimark.markCurrentLine",
        "workspaceContains:*.*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "yiyimark",
            "properties": {
                "yiyimark.DataSaveFilePath": {
                    "type":"string",
                    "description": "The path to save mark data. If it's empty, data will be saved in file 'workspaceFolders/.vscode/markData.json'.",
                    "default": ""
                },
                "yiyimark.AutoSave": {
                    "type":"boolean",
                    "description": "Controls auto save of mark data that have unsaved changes.",
                    "default": true
                },
                "yiyimark.AutoReadChange": {
                    "type":"boolean",
                    "description": "Controls auto read of data that modified by other processes.",
                    "default": true
                }
            }
        },
        "commands": [
            {
                "command": "yiyimark.markCurrentLine",
                "title": "Mark Current Line"
            },
            {
                "command": "yiyimark.deleteNode",
                "title": "Delete Node",
                "icon": {
                    "dark": "media/delete_all_dark.svg",
                    "light": "media/delete_all_light.svg"
                }
            },
            {
                "command": "yiyimark.editNode",
                "title": "Edit Node",
                "icon": {
                    "dark": "media/edit_dark.svg",
                    "light": "media/edit_light.svg"
                }
            },
            {
                "command": "yiyimark.createGroup",
                "title": "Create Group",
                "icon": {
                    "dark": "media/folder_dark.svg",
                    "light": "media/folder.svg"
                }
            },
            {
                "command": "yiyimark.refresh",
                "title": "Refresh All Node, Reload Data.",
                "icon": {
                    "dark": "media/refresh_dark.svg",
                    "light": "media/refresh_light.svg"
                }
            },
            {
                "command": "yiyimark.reloadData",
                "title": "Reload saved mark data."
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "yiyi-mark",
                    "title": "YiYi Mark",
                    "icon": "media/catpaw.svg"
                }
            ]
        },
        "views": {
            "yiyi-mark": [
                {
                    "id": "yiyi-markview",
                    "name": "mark",
                    "icon": "media/dep.svg",
                    "contextualTitle": "mark"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "yiyimark.markCurrentLine",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "yiyimark.createGroup",
                    "when": "view == yiyi-markview",
                    "group": "navigation"
                },
                {
                    "command": "yiyimark.refresh",
                    "when": "view == yiyi-markview",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "yiyimark.deleteNode",
                    "when": "view == yiyi-markview",
                    "group": "inline"
                },
                {
                    "command": "yiyimark.deleteNode",
                    "when": "view == yiyi-markview"
                },
                {
                    "command": "yiyimark.editNode",
                    "when": "view == yiyi-markview",
                    "group": "inline"
                },
                {
                    "command": "yiyimark.editNode",
                    "when": "view == yiyi-markview"
                },
                {
                    "command": "yiyimark.createGroup",
                    "when": "view == yiyi-markview"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.3",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.16.0",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}